# Vercel Environment Variables Template
# Copy this to your Vercel project settings

# Required for production
NODE_ENV=production
PORT=3000

# MongoDB Connection (required for full functionality)
MONGODB_URI=your_mongodb_connection_string_here

# JWT Secret (required for authentication)
JWT_SECRET=your_jwt_secret_here

# Email Configuration (required for contact forms and notifications)
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password_here
EMAIL_SERVICE=gmail

# Optional: Custom Domain
CUSTOM_DOMAIN=https://yourdomain.com

# Optional: Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Optional: MongoDB Connection Options
MONGODB_MAX_POOL_SIZE=10
MONGODB_SERVER_SELECTION_TIMEOUT_MS=5000
MONGODB_SOCKET_TIMEOUT_MS=45000

# Vercel-specific (auto-set by Vercel)
VERCEL=1
VERCEL_URL=your_vercel_url_here
